    <style>
#error-message {
    font-size: 16px;
    font-weight: bold;
    padding: 12px;
    margin-top: 15px;
    border-radius: 5px;
    background: #f8d7da; /* Rouge clair */
    color: #721c24; /* Rouge foncé */
    border: 1px solid #f5c6cb;
    width: 100%;
    text-align: center;
}

 .lang-flag {
      width: 24px;
      height: 16px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
      display: inline-block;
      flex-shrink: 0;
    }
    .lang-fr {
      background-image: url('https://flagcdn.com/fr.svg');
    }
    .lang-en {
      background-image: url('https://flagcdn.com/gb.svg');
    }
footer .copyright-text {
  font-size: 0.95rem;
  color: #444;
  margin-top: 20px;
  text-align: center;
}

        .form-container {
            max-width: 600px;
            margin: 110px auto;
            padding: 20px;
            background: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            margin-bottom: 20px;
        }
        .form-container .form-text {
            margin-bottom: 15px;
        }
        .new-section {
            padding: 60px 0; /* Padding for the new section */
            background-color: #f8f9fa; /* Light background color */
        }
        .hero-section {
            padding-top: 100px; /* Ensure content is not hidden behind the fixed navbar */
        }
        .form-control-icon {
            position: relative;
        }
        .form-control-icon input {
            padding-right: 2.5rem;
        }
        .form-control-icon .icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .btn-primary {
            background-color: #52566f;
            border-color: #000;
        }
        .btn-primary:hover {
            background-color: #52566f;
            border-color: #52566f;
        }
        .form-container .form-label {
            font-weight: bold;
        }
        .navbar {
            background-color: #C4B990; 
        }
        .navbar .navbar-brand, .navbar .nav-link, .navbar .navbar-icon {
            color: #000; 
        }
        .navbar .navbar-icon {
            font-size: 1.5rem;
        }
        .navbar .navbar-icon.bi-person {
            color: #000 !important;
        }
.language-switcher .dropdown-menu {
  min-width: 140px;
  transition: all 0.2s ease-in-out;
}

.language-switcher .dropdown-item:hover {
  background-color: #f1f1f1;
  color: #000;
  transition: 0.2s;
}

.language-switcher .btn-light {
  background-color: white;
  border-color: #ddd;
  transition: background-color 0.2s ease;
  font-size: 1.2rem;
}

.language-switcher .btn-light:hover {
  background-color: #f8f9fa;
}
.navbar .btn-outline-dark:hover {
  background-color: #52566f;
  color: #fff;
  border-color: #52566f;
}

  .navbar .btn-outline-dark {
    margin-right: 12px;
  }



        @media (max-width: 767px) {
            .form-container {
                background: none;
                box-shadow: none;
                border: none;
            }
        }
@media (max-width: 768px) {
  .footer-title {
    font-size: 1.25rem;
    font-weight: 600;
  }
  .footer-link {
    font-size: 1.1rem;
    padding: 4px 0;
    display: inline-block;
  }
}
 @media (max-width: 991.98px) {
      .mobile-lang-selector {
        display: flex !important;
        align-items: center;
        gap: 8px;
      }
      .desktop-lang-selector {
        display: none !important;
      }
    }
    @media (min-width: 992px) {
      .mobile-lang-selector {
        display: none !important;
      }
    }

