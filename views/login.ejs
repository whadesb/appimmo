                        </div>
                    </div>
                </div>
            </nav>

            <!-- New Section Start -->
            <section class="new-section">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-lg-8 mx-auto">
                            <div class="form-container">
                                <h2 class="text-center">Connexion</h2>
                                <form action="/login" method="POST">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <div class="form-control-icon">
                                            <input type="email" class="form-control" id="email" name="email" required>
                                            <i class="bi bi-envelope-fill icon"></i>
                                        </div>
                                        <div id="emailHelp" class="form-text">Vous pouvez utiliser votre email pour vous connecter.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Mot de passe</label>
                                        <div class="form-control-icon">
                                            <input type="password" class="form-control" id="password" name="password" required>
                                            <i class="bi bi-eye-fill icon" id="togglePassword"></i>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Connexion</button>
                                </form>
                                <div class="mt-3 text-center">
                                    <span>Pas encore de compte ? <a href="/register">Inscrivez-vous ici</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- New Section End -->

        
