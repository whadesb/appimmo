            margin-bottom: 30px;
            font-weight: 700;
            text-align: center;
        }
        .form-container .form-text {
            margin-bottom: 15px;
        }
        .form-container .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
        }
