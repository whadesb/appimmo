<script>
  function handlePasswordToggle(buttonId, inputId) {
    const toggleBtn = document.getElementById(buttonId);
    const input = document.getElementById(inputId);
    const icon = toggleBtn.querySelector('i');

    // Appliquer animation initiale
    icon.style.transition = 'transform 0.2s ease, opacity 0.2s ease';

    toggleBtn.addEventListener('mousedown', () => {
      input.type = 'text';
      icon.classList.remove('bi-eye');
      icon.classList.add('bi-eye-slash');
      icon.style.transform = 'scale(1.2)';
      icon.style.opacity = '0.7';
    });

    toggleBtn.addEventListener('mouseup', () => {
      input.type = 'password';
      icon.classList.remove('bi-eye-slash');
      icon.classList.add('bi-eye');
      icon.style.transform = 'scale(1)';
      icon.style.opacity = '1';
    });

    toggleBtn.addEventListener('mouseleave', () => {
      input.type = 'password';
      icon.classList.remove('bi-eye-slash');
      icon.classList.add('bi-eye');
      icon.style.transform = 'scale(1)';
      icon.style.opacity = '1';
    });
  }

  handlePasswordToggle('togglePassword', 'password');
  handlePasswordToggle('toggleConfirmPassword', 'confirmPassword');
</script>
<script>
  const password = document.getElementById('password');
  const confirmPassword = document.getElementById('confirmPassword');
  const messageDiv = document.getElementById('passwordMatchMessage');

  function checkPasswordMatch() {
    if (confirmPassword.value === '') {
      messageDiv.textContent = '';
      confirmPassword.setCustomValidity('');
      return;
    }

    if (confirmPassword.value !== password.value) {
      messageDiv.textContent = "❌ Les mots de passe ne correspondent pas.";
      messageDiv.className = 'password-match-message error';
      confirmPassword.setCustomValidity("Les mots de passe ne correspondent pas.");
    } else {
      messageDiv.textContent = "✅ Les mots de passe correspondent.";
      messageDiv.className = 'password-match-message success';
      confirmPassword.setCustomValidity('');
    }
  }

  password.addEventListener('input', checkPasswordMatch);
  confirmPassword.addEventListener('input', checkPasswordMatch);
</script>

<script>
  const passwordStrength = document.getElementById('passwordStrength');

  password.addEventListener('input', function () {
    const value = password.value;
    let strength = 0;

    if (value.length >= 8) strength++;
    if (/[A-Z]/.test(value)) strength++;
    if (/[0-9]/.test(value)) strength++;
    if (/[^A-Za-z0-9]/.test(value)) strength++;

    switch (strength) {
      case 0:
      case 1:
        passwordStrength.textContent = "🔴 Mot de passe trop faible.";
        passwordStrength.className = "password-match-message error";
        break;
      case 2:
      case 3:
        passwordStrength.textContent = "🟠 Sécurité moyenne.";
        passwordStrength.className = "password-match-message";
        break;
      case 4:
        passwordStrength.textContent = "🟢 Mot de passe sécurisé.";
        passwordStrength.className = "password-match-message success";
        break;
    }
  });
</script>

<script>
  const form = document.querySelector('form');
  const errorBox = document.getElementById('formErrorMessage');

  form.addEventListener('submit', async function (e) {
    e.preventDefault(); // Empêche l'envoi immédiat
    errorBox.classList.add('d-none');
    errorBox.textContent = '';

    // Réinitialise les styles
    form.querySelectorAll('input').forEach(el => el.classList.remove('is-invalid'));

    const email = form.querySelector('#email').value;

    try {
      const res = await fetch('/check-email?email=' + encodeURIComponent(email));
      const { exists } = await res.json();

      if (exists) {
        const emailInput = document.querySelector('#email');
        emailInput.classList.add('is-invalid');
        errorBox.classList.remove('d-none');
        errorBox.textContent = '❌ Cette adresse e-mail est déjà utilisée.';

        return;
      }

      form.submit(); // Envoie si tout est bon

    } catch (err) {
      errorBox.classList.remove('d-none');
      errorBox.textContent = 'Une erreur est survenue. Veuillez réessayer.';
    }
  });
</script>

