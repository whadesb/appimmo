        <!-- Zone de code et clavier -->
        <input type="hidden" name="code" id="hidden-code">
        <div id="code-display" class="form-control mb-3 text-center fs-4" style="letter-spacing: 10px;" readonly></div>
        <<div class="mb-4">
  <div id="numeric-keypad" class="d-grid gap-2" style="grid-template-columns: repeat(3, 1fr); max-width: 300px; margin: auto;"></div>
</div>

        <!-- Boutons -->
        <button type="button" id="clear-code" class="btn btn-outline-secondary w-100 mb-2">Effacer</button>
<button id="submit-code" type="submit" class="btn btn-primary w-100" disabled>Valider</button>
      </form>
    </div>
  </div>
</main>

