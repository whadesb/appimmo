<script>
    document.addEventListener('DOMContentLoaded', function () {
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        
        const strengthBar = document.getElementById('password-strength-bar');
        const strengthText = document.getElementById('password-strength-text');
        const matchText = document.getElementById('password-match-text');

        // Textes de traduction (ajustez au besoin)
        const i18n_weak = "<%= i18n.password_weak || 'Faible' %>";
        const i18n_medium = "<%= i18n.password_medium || 'Moyen' %>";
        const i18n_strong = "<%= i18n.password_strong || 'Fort' %>";
        const i18n_match = "<%= i18n.passwords_match || 'Mots de passe identiques' %>";
        const i18n_no_match = "<%= i18n.passwords_no_match || 'Les mots de passe ne correspondent pas' %>";

        function checkPasswordStrength(password) {
            let strength = 0;
            if (password.length >= 8) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;

            // Réinitialiser les classes
            strengthBar.classList.remove('bg-danger', 'bg-warning', 'bg-success');
            strengthText.classList.remove('text-danger', 'text-warning', 'text-success');

            if (password.length === 0) {
                strengthText.textContent = '';
                strengthBar.style.width = '0%';
            } else if (strength < 3) {
                strengthText.textContent = i18n_weak;
                strengthText.classList.add('text-danger');
                strengthBar.classList.add('bg-danger');
                strengthBar.style.width = '33%';
            } else if (strength < 5) {
                strengthText.textContent = i18n_medium;
                strengthText.classList.add('text-warning');
                strengthBar.classList.add('bg-warning');
                strengthBar.style.width = '66%';
            } else {
                strengthText.textContent = i18n_strong;
                strengthText.classList.add('text-success');
                strengthBar.classList.add('bg-success');
                strengthBar.style.width = '100%';
            }
        }

        function checkPasswordMatch() {
            const password = passwordInput.value;
            const confirmPassword = confirmPasswordInput.value;

            // Réinitialiser les classes
            matchText.classList.remove('text-success', 'text-danger');
            confirmPasswordInput.classList.remove('is-valid', 'is-invalid');

            if (confirmPassword.length === 0) {
                matchText.textContent = '';
                return;
            }

            if (password === confirmPassword) {
                matchText.textContent = i18n_match;
                matchText.classList.add('text-success');
                confirmPasswordInput.classList.add('is-valid');
            } else {
                matchText.textContent = i18n_no_match;
                matchText.classList.add('text-danger');
                confirmPasswordInput.classList.add('is-invalid');
            }
        }

        // Écouteurs d'événements
        if (passwordInput) {
            passwordInput.addEventListener('input', () => {
                checkPasswordStrength(passwordInput.value);
                checkPasswordMatch(); // Re-vérifier la correspondance si le 1er champ change
            });
        }
        if (confirmPasswordInput) {
            confirmPasswordInput.addEventListener('input', checkPasswordMatch);
        }
    });
</script>
