<!doctype html>
<html lang="<%= locale %>">
<head>
    <!-- Balises Meta SEO -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= i18n.metaDescription %>">
    <meta name="author" content="<%= i18n.metaAuthor %>">
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="<%= i18n.metaKeywords %>">
    <meta name="theme-color" content="#C4B990">
    <title><%= i18n.title %></title>
    <!-- Balises Open Graph pour le partage social -->
    <meta property="og:title" content="<%= i18n.ogTitle %>">
    <meta property="og:description" content="<%= i18n.ogDescription %>">
    <meta property="og:image" content="<%= i18n.ogImage %>">
    <meta property="og:url" content="https://www.uapimmo.com">
    <meta property="og:type" content="website">
    <!-- Balises Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= i18n.ogTitle %>">
    <meta name="twitter:description" content="<%= i18n.ogDescription %>">
    <meta name="twitter:image" content="<%= i18n.ogImage %>">

    <!-- Liens CSS et préchargement -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="preload" href="/css/bootstrap.min.css" as="style">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="preload" href="/css/bootstrap-icons.css" as="style">
    <link rel="stylesheet" href="/css/bootstrap-icons.css">
    <link rel="preload" href="/css/styles-main.css" as="style">
    <link rel="stylesheet" href="/css/styles-main.css">

    <style>
        /* Custom styles */
        body {
            font-family: 'Montserrat', sans-serif;
        }

        .hero {
            display: flex;
            flex-wrap: wrap;
            background-color: #fff;
            padding: 50px;
            align-items: center;
        }

        .hero .col-left {
            flex: 2;
            padding-right: 20px;
        }

        .hero .col-left img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .hero .col-right {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .hero h1 {
            font-size: 2.5rem;
            color: #333;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .hero h2 {
            font-size: 1.5rem;
            color: #666;
            margin-bottom: 15px;
        }

        .hero p {
            font-size: 1rem;
            color: #555;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            .hero {
                flex-direction: column;
                padding: 20px;
            }

            .hero .col-left {
                order: 2;
                padding-right: 0;
            }

            .hero .col-right {
                order: 1;
                text-align: center;
                margin-bottom: 20px;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .hero h2 {
                font-size: 1.2rem;
            }

            .hero p {
                font-size: 1rem;
            }
        }

        .site-footer {
            background-color: #f8f9fa;
            padding: 40px 0;
        }

        .site-footer h6 {
            font-weight: bold;
            color: #333;
        }

        .site-footer a {
            color: #666;
        }

        .site-footer a:hover {
            color: #C4B990;
        }
    </style>
</head>
<body id="top">
    <main>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/<%= locale %>">
                    <span>UAP Immo</span>
                </a>
                <div class="d-lg-none ms-auto me-4">
                    <a href="/<%= locale %>/login" style="position: relative;">
                        <i class="bi bi-person-circle" style="font-size: 1.8rem; color: black;"></i>
                        <span class="visually-hidden">Login</span>
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-lg-5 me-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link click-scroll" href="/<%= locale %>"><%= i18n.menu.home %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link click-scroll" href="/<%= locale %>#fonctionnement"><%= i18n.menu.fonctionnement %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link click-scroll" href="/<%= locale %>#processus"><%= i18n.menu.processus %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link click-scroll" href="/<%= locale %>#faq"><%= i18n.menu.faq %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link click-scroll" href="/fr/contact">contact</a>
                        </li>
                    </ul>
                    <div class="d-none d-lg-block">
                        <a href="/<%= locale %>/login" style="position: relative;">
                            <i class="bi bi-person-circle" style="font-size: 1.8rem; color: black;"></i>
                            <span class="visually-hidden">Login</span>
                        </a>
                    </div>
                    <div class="dropdown d-none d-lg-block ms-3">
                        <button class="btn btn-link dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000;">
                            <%= locale === 'fr' ? 'FR' : 'EN' %>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                            <li>
                                <a class="dropdown-item" href="/fr/login">FR</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/en/login">EN</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section class="hero">
            <div class="col-left">
                <img src="https://via.placeholder.com/800x500" alt="Image Immobilier">
            </div>
            <div class="col-right">
                <h1>UAP Immo</h1>
                <h2>Votre solution de webmarketing immobilier</h2>
                <p>UAP Immo vous accompagne dans la création et la diffusion de vos annonces immobilières grâce à une plateforme simple et efficace.</p>
            </div>
        </section>

        <!-- Footer -->
        <footer class="site-footer section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-12 mb-4 pb-2">
                        <a class="navbar-brand mb-2" href="/<%= locale %>">
                            <span>UAP Immo</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-4 col-6">
                        <h6 class="site-footer-title mb-3">Informations</h6>
                        <ul class="site-footer-links">
                            <li class="site-footer-link-item"><a href="/<%= locale %>" class="site-footer-link">Accueil</a></li>
                            <li class="site-footer-link-item"><a href="/<%= locale %>/register" class="site-footer-link">Créer un compte</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-4 col-6">
                        <h6 class="site-footer-title mb-3">Accès</h6>
                        <ul class="site-footer-links">
                            <li class="site-footer-link-item"><a href="/<%= locale %>/contact" class="site-footer-link">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-4 col-12 mt-4 mt-lg-0 ms-auto">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <%= i18n.menu.language %>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/en/contact">English</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/fr/contact">Français</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <p class="copyright-text mt-lg-5 mt-4">Copyright © 2024 UAP Company. <%= i18n.footer.all_rights %></p>
            </div>
        </footer>
    </main>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
