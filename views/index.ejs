<!doctype html>
<html lang="<%= locale %>">
<head>
    <!-- Balises Meta SEO -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%= i18n.metaDescription %>">
    <meta name="author" content="<%= i18n.metaAuthor %>">
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="<%= i18n.metaKeywords %>">
    <meta name="theme-color" content="#C4B990">
    <title><%= i18n.title %></title>
    <!-- Balises Open Graph pour le partage social -->
    <meta property="og:title" content="<%= i18n.ogTitle %>">
    <meta property="og:description" content="<%= i18n.ogDescription %>">
    <meta property="og:image" content="<%= i18n.ogImage %>">
    <meta property="og:url" content="https://www.uapimmo.com">
    <meta property="og:type" content="website">
    <!-- Balises Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= i18n.ogTitle %>">
    <meta name="twitter:description" content="<%= i18n.ogDescription %>">
    <meta name="twitter:image" content="<%= i18n.ogImage %>">

    <!-- Liens CSS et préchargement -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="preload" href="/css/bootstrap.min.css" as="style">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="preload" href="/css/bootstrap-icons.css" as="style">
    <link rel="stylesheet" href="/css/bootstrap-icons.css">
    <link rel="preload" href="/css/styles-main.css" as="style">
    <link rel="stylesheet" href="/css/styles-main.css">

    <!-- Custom CSS for animations and layout -->
    <style>
        /* Custom styles */
        .cookie-consent-popup {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #232430;
            color: white;
            padding: 20px;
            text-align: center;
            z-index: 9999;
            display: none;
        }

        .cookie-consent-popup.visible {
            display: block;
        }

        .btn-accept,
        .btn-decline {
            background-color: #C4B990;
            color: #232430;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
        }

        .btn-accept:hover,
        .btn-decline:hover {
            background-color: #a4946c;
        }

        .hero-section {
            position: relative;
            height: 100vh;
            background: url('/images/hero-background.jpg') no-repeat center center/cover;
            color: white;
            text-align: left;
        }

        .hero-section .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            display: flex;
            flex-direction: row;
            align-items: center;
            height: 100%;
            z-index: 1;
        }

        .hero-text {
            flex: 1;
            padding-right: 2rem;
        }

        .hero-title {
            font-size: 2rem;
            font-weight: 700;
            color: #52566f;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 400;
            margin-top: 20px;
        }

        .btn-hero {
            margin-top: 30px;
            padding: 15px 30px;
            font-size: 1.2rem;
        }

        .hero-image {
            flex: 1;
            text-align: center;
        }

        .hero-image img {
            width: 100%;
            max-width: 500px;
        }
    </style>
</head>
