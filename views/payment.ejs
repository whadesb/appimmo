<script>
/* ---------- PayPal ---------- */
paypal.Buttons({
  createOrder: function (data, actions) {
    return actions.order.create({
      intent: 'CAPTURE',
      purchase_units: [{
        amount: { currency_code: 'EUR', value: '500.00' },
        description: 'Paiement annonce immobilière UAP'
      }]
    });
  }, // ✅ virgule ici
  onApprove: function (data, actions) {
    const simulatedOrderID = data.orderID || 'SIMULATED12345';
    const propertyIdEl = document.getElementById('propertyId');
    const propertyId = propertyIdEl ? propertyIdEl.value : null;

    return fetch('/process-paypal-payment', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        orderID: simulatedOrderID,
        propertyId: propertyId,
        amount: '500.00'
      })
    })
    .then(async (res) => {
      const json = await res.json().catch(() => ({}));
      if (!res.ok) throw new Error(json.message || ('HTTP ' + res.status));
      return json;
    })
    .then((result) => {
      if (result.success && result.redirectUrl) {
        window.location.href = result.redirectUrl;
      } else {
        alert('Erreur : ' + (result.message || 'Réponse inattendue.'));
      }
    })
    .catch((err) => {
      console.error('Erreur PayPal :', err);
      alert("Une erreur s'est produite avec PayPal : " + (err.message || err));
    });
  }
}).render('#paypal-button-container');

/* ---------- BTCPay (Bitcoin) ---------- */
document.getElementById('btc-button').addEventListener('click', function () {
  const pm = document.getElementById('payment-method');
  if (pm) pm.textContent = '<%= i18n.pay_with_btc %>';

  const propertyIdEl = document.getElementById('propertyId');
  const propertyId = propertyIdEl ? propertyIdEl.value : null;

  fetch('/process-btcpay-payment', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ propertyId: propertyId, amount: '500.00' })
  })
  .then(async (res) => {
    const json = await res.json().catch(() => ({}));
    if (!res.ok) throw new Error(json.message || ('HTTP ' + res.status));
    return json;
  })
  .then((result) => {
    if (result.success && result.invoiceUrl) {
      // Tente d’ouvrir dans un modal si présent, sinon redirige
      const iframe = document.getElementById('btcpay-iframe');
      const modalEl = document.getElementById('btcpay-modal');
      if (iframe && modalEl && window.bootstrap && bootstrap.Modal) {
        iframe.src = result.invoiceUrl;
        const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
        modal.show();
      } else {
        window.location.href = result.invoiceUrl;
      }
    } else {
      alert('Erreur : ' + (result.message || 'Réponse inattendue.'));
    }
  })
  .catch((err) => {
    console.error('Erreur BTC Pay :', err);
    alert("Une erreur s'est produite avec Bitcoin : " + (err.message || err));
  });
});
</script>
