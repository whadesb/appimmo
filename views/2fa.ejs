<script>
  // âœ… TIMER VISUEL 30 SECONDES
  let timeLeft = 30;
  const timerDisplay = document.getElementById('timer');
  const interval = setInterval(() => {
    timeLeft--;
    timerDisplay.textContent = timeLeft;
    if (timeLeft <= 0) {
      clearInterval(interval);
      document.getElementById('countdown').innerHTML = "â±ï¸ Le code a expirÃ©. GÃ©nÃ©rez un nouveau code.";
    }
  }, 1000);

  // âœ… ANIMATION DE VALIDATION
  document.querySelector('form').addEventListener('submit', (e) => {
    e.preventDefault();

    const code = document.getElementById('code').value.trim();
    if (code.match(/^\d{6}$/)) {
      document.getElementById('success-check').style.display = 'block';
      document.querySelector('form button[type="submit"]').disabled = true;

      setTimeout(() => {
        e.target.submit(); // Soumission rÃ©elle aprÃ¨s animation
      }, 1500);
    } else {
      alert("Veuillez entrer un code Ã  6 chiffres valide.");
    }
  });
</script>

