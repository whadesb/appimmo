<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Two-Factor Authentication page for UAP Immo.">
  <title>UAP Immo | <%= i18n.title %></title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles-main.css">

  <style>
 body {
  font-family: 'Inter', sans-serif;
  background-color: #fff;
  color: #212529;
  margin: 0;
  padding: 0;
 display: flex;
  flex-direction: column;
  min-height: 100vh;
}
main {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 80px); /* On retire juste le footer, le padding-top compense la navbar */
  padding: 120px 20px 60px; /* top | horizontal | bottom */
  background-color: #fff;
}



.twofa-container {
  max-width: 1100px;
  margin: auto;
  padding: 0 20px;
  display: flex;
  gap: 60px;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.twofa-left {
  flex: 1 1 48%;
}

.twofa-left h2 {
  font-size: 1.9rem;
  font-weight: 600;
  margin-bottom: 14px;
}

.twofa-left p {
  font-size: 1rem;
  color: #6c757d;
  margin-bottom: 20px;
}

.twofa-left ul {
  list-style: none;
  padding-left: 0;
  border-left: 3px solid #dee2e6;
  padding-left: 16px;
  margin-top: 12px;
}

.twofa-left li {
  font-size: 0.95rem;
  margin-bottom: 8px;
  color: #444;
  position: relative;
}

.twofa-left li::before {
  content: "✓";
  color: #8f97c4;
  margin-right: 8px;
}

.twofa-form-wrapper {
  flex: 1 1 40%;
  background-color: #f8f9fa;
  padding: 32px;
  border-radius: 10px;
  border: 1px solid #e2e6ea;
}

.twofa-form-wrapper label {
  display: block;
  font-weight: 500;
  margin-bottom: 8px;
}
#numeric-keypad button {
  font-size: 1.5rem;
  padding: 14px 0;
  border-radius: 8px;
}
#numeric-keypad {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  max-width: 300px;
  margin: 20px auto;
}

#code {
  width: 100%;
  padding: 14px;
  font-size: 1.6rem;
  font-weight: 600;
  text-align: center;
  border: 1px solid #ced4da;
  border-radius: 8px;
  letter-spacing: 6px;
  background-color: #fff;
}

#code:focus {
  border-color: #8f97c4;
  outline: none;
  box-shadow: 0 0 0 2px rgba(143, 151, 196, 0.2);
}

#countdown {
  font-size: 0.875rem;
  color: #999;
  text-align: center;
  margin-top: 12px;
  margin-bottom: 20px;
}

#success-check {
  display: none;
  text-align: center;
  margin-bottom: 20px;
}

#success-check i {
  font-size: 2rem;
  color: #28a745;
}

#success-check p {
  font-weight: 500;
  color: #28a745;
  margin-top: 8px;
}

.btn-primary {
  width: 100%;
  background-color: #8f97c4;
  border: none;
  padding: 14px;
  font-size: 1rem;
  font-weight: 600;
  border-radius: 8px;
  transition: background-color 0.2s ease;
}

.btn-primary:hover {
  background-color: #7a81b8;
}

.text-muted a {
  text-decoration: none;
  color: #6c757d;
  font-size: 0.875rem;
}

.text-muted a:hover {
  color: #444;
}
#code-display {
  height: 50px;
  background: #fff;
  border: 1px solid #ced4da;
  border-radius: 8px;
  line-height: 50px;
}

@media (max-width: 768px) {
  .twofa-container {
    flex-direction: column;
    gap: 40px;
  }

  .twofa-form-wrapper {
    width: 100%;
  }

  .twofa-left {
    text-align: center;
  }

  .twofa-left ul {
    margin: auto;
    max-width: 320px;
  }
}
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top" style="background-color: #C4B990;">
    <div class="container">
      <a class="navbar-brand" href="/<%= locale %>">UAP Immo</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/<%= locale %>"><%= i18n.menu.home %></a></li>
          <li class="nav-item"><a class="nav-link" href="/<%= locale %>/contact"><%= i18n.menu.contact %></a></li>
        </ul>

        <% if (isAuthenticated) { %>
          <a href="/<%= locale %>/user" class="btn btn-outline-dark rounded-pill me-2">
            <i class="bi bi-person-circle me-1"></i> <%= locale === 'fr' ? 'Mon compte' : 'My Account' %>
          </a>
          <form action="/logout" method="POST" class="d-inline">
            <button class="btn btn-outline-dark rounded-pill" type="submit">
              <i class="bi bi-box-arrow-right me-1"></i> <%= i18n.logout %>
            </button>
          </form>
        <% } else { %>
          <a href="/<%= locale %>/login" class="btn btn-outline-dark rounded-pill me-2">
            <i class="bi bi-person-fill me-1"></i> <%= locale === 'fr' ? 'Connexion' : 'Login' %>
          </a>
        <% } %>

        <!-- Langue -->
        <div class="dropdown">
          <button class="btn btn-light border rounded-pill px-3 py-1 d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown">
            <% if (locale === 'fr') { %> 🇫🇷 <% } else { %> 🇬🇧 <% } %>
            <i class="bi bi-chevron-down small"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow">
            <%
              const cleanPath = currentPath.replace(/^\/(fr|en)/, '') || '';
            %>
            <% if (locale === 'fr') { %>
              <li><a class="dropdown-item" href="/en<%= cleanPath %>">🇬🇧 English</a></li>
            <% } else { %>
              <li><a class="dropdown-item" href="/fr<%= cleanPath %>">🇫🇷 Français</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
<main>
  <div class="twofa-container">
    <div class="twofa-left">
      <h2><%= i18n.heading %></h2>
      <p><%= i18n.description %></p>
      <ul>
        <% i18n.instruction_steps.forEach(function(step) { %>
          <li><%= step %></li>
        <% }); %>
      </ul>
    </div>

    <div class="twofa-form-wrapper">
      <% if (messages.error && messages.error.length > 0) { %>
        <p class="text-danger text-center fw-bold"><%= messages.error[0] %></p>
      <% } %>

      <form method="POST" action="/<%= locale %>/2fa">
        <div id="code-display" class="form-control mb-3 text-center fs-4" style="letter-spacing: 10px;" readonly></div>

<div id="numeric-keypad" class="d-grid gap-2" style="grid-template-columns: repeat(3, 1fr); max-width: 300px; margin: auto;">
  <!-- Touches générées par JS -->
</div>

<button id="clear-code" class="btn btn-outline-secondary w-100 mt-2">Effacer</button>
<button id="submit-code" type="submit" class="btn btn-primary w-100 mt-3" disabled>Valider</button>

<input type="hidden" name="code" id="hidden-code">


        <div id="countdown">Le code expire dans <span id="timer">30</span> secondes.</div>

        <div id="success-check">
          <i class="bi bi-check-circle-fill"></i>
          <p>Code accepté, redirection en cours...</p>
        </div>

      
      </form>

      <div class="text-center mt-3">
        <a href="/<%= locale %>/logout" class="text-muted"><%= i18n.logout %></a>
      </div>
    </div>
  </div>
</main>

  <!-- Footer -->
<footer class="site-footer section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-12 mb-4 pb-2">
        <a class="navbar-brand mb-2" href="/<%= locale %>">
          <span>UAP Immo</span>
        </a>
      </div>
      <div class="col-lg-3 col-md-4 col-6">
        <h6 class="site-footer-title mb-3">Informations</h6>
        <ul class="site-footer-links">
          <li class="site-footer-link-item"><a href="/<%= locale %>" class="site-footer-link">Accueil</a></li>
          <li class="site-footer-link-item"><a href="/<%= locale %>/register" class="site-footer-link">Créer un compte</a></li>
        </ul>
      </div>
      <div class="col-lg-3 col-md-4 col-6">
        <h6 class="site-footer-title mb-3">Accès</h6>
        <ul class="site-footer-links">
          <li class="site-footer-link-item"><a href="/<%= locale %>/contact" class="site-footer-link">Contact</a></li>
        </ul>
      </div>
      <div class="col-lg-3 col-md-4 col-12 mt-4 mt-lg-0 ms-auto">
        <div class="dropdown">
          <button class="btn btn-light border rounded-pill px-3 py-1 d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="lang-flag <%= locale === 'fr' ? 'lang-fr' : 'lang-en' %>"></span>
            <i class="bi bi-chevron-down small"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow">
            <% if (locale === 'fr') { %>
              <li><a class="dropdown-item d-flex align-items-center gap-2" href="/en<%= cleanPath %>"><span class="lang-flag lang-en"></span> <span>English</span></a></li>
            <% } else { %>
              <li><a class="dropdown-item d-flex align-items-center gap-2" href="/fr<%= cleanPath %>"><span class="lang-flag lang-fr"></span> <span>Français</span></a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
    <p class="copyright-text mt-lg-5 mt-4">Copyright © 2025 UAP Company. <%= i18n.footer && i18n.footer.all_rights ? i18n.footer.all_rights : 'Tous droits réservés.' %>
</p>
  </div>
</footer>

  <!-- Scripts -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/jquery.min.js"></script>

<script>
 document.querySelector('form').addEventListener('submit', (e) => {
  e.preventDefault();

  const code = document.getElementById('hidden-code').value.trim();

  if (code.length === 6 && countdown > 0) {
    document.getElementById('success-check').style.display = 'block';
    document.querySelector('form button[type="submit"]').disabled = true;

    setTimeout(() => {
      e.target.submit(); // Soumission réelle après animation
    }, 1500);
  } else {
    alert("Le code est invalide ou a expiré. Veuillez recommencer.");
  }
});

</script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const keypad = document.getElementById("numeric-keypad");
    const codeDisplay = document.getElementById("code-display");
    const hiddenCode = document.getElementById("hidden-code");
    const clearBtn = document.getElementById("clear-code");
    const submitBtn = document.getElementById("submit-code");

    function generateRandomDigits() {
      const digits = [...Array(10).keys()];
      for (let i = digits.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [digits[i], digits[j]] = [digits[j], digits[i]];
      }
      return digits;
    }

    function renderKeypad() {
      keypad.innerHTML = "";
      const digits = generateRandomDigits();
      digits.forEach(digit => {
        const btn = document.createElement("button");
        btn.className = "btn btn-light";
        btn.textContent = digit;
        btn.onclick = () => enterDigit(digit);
        keypad.appendChild(btn);
      });
    }
// ⏳ Démarre le compte à rebours
let countdown = 30;
const timerSpan = document.getElementById("timer");
const submitBtn = document.getElementById("submit-code");

const countdownInterval = setInterval(() => {
  countdown--;
  timerSpan.textContent = countdown;

  if (countdown <= 0) {
    clearInterval(countdownInterval);
    timerSpan.textContent = "0";
    submitBtn.disabled = true;
    submitBtn.textContent = "Code expiré";
    submitBtn.classList.add("btn-secondary");
    submitBtn.classList.remove("btn-primary");
  }
}, 1000);

    function enterDigit(digit) {
      if (hiddenCode.value.length < 6) {
        hiddenCode.value += digit;
        codeDisplay.textContent = "*".repeat(hiddenCode.value.length);
      }
      submitBtn.disabled = hiddenCode.value.length !== 6;
    }

    clearBtn.onclick = () => {
      hiddenCode.value = "";
      codeDisplay.textContent = "";
      submitBtn.disabled = true;
    };

    renderKeypad();
  });
</script>

</body>
</html>
