<script>
  document.addEventListener('DOMContentLoaded', () => {
    let currentStep = 1;
    const totalSteps = 4;
    const form = document.getElementById('edit-property-form');
    const progressBar = document.getElementById('editFormProgress');
    const requireNewMainPhotos = <%= requireNewMainPhotos ? 'true' : 'false' %> === 'true';
    const initialHasVideo = <%= hasStoredVideo ? 'true' : 'false' %> === 'true';

    function showStep(step) {
      document.querySelectorAll('#edit-property-form .form-step').forEach(stepEl => {
        if (Number(stepEl.getAttribute('data-step')) === step) {
          stepEl.classList.remove('d-none');
          stepEl.style.opacity = 1;
        } else {
          stepEl.classList.add('d-none');
          stepEl.style.opacity = 0;
        }
      });

      if (progressBar) {
        const percent = Math.min(Math.max(step, 1), totalSteps) * (100 / totalSteps);
        progressBar.style.width = `${percent}%`;
        progressBar.textContent = `√âtape ${step} sur ${totalSteps}`;
      }
    }

    document.querySelectorAll('#edit-property-form .next-step').forEach(btn => {
      btn.addEventListener('click', () => {
        const currentStepEl = document.querySelector(`#edit-property-form .form-step[data-step="${currentStep}"]`);
        const fields = currentStepEl ? currentStepEl.querySelectorAll('input, select, textarea') : [];
        for (const field of fields) {
          if (!field.checkValidity()) {
            field.reportValidity();
            return;
          }
        }
        currentStep = Math.min(currentStep + 1, totalSteps);
        showStep(currentStep);
      });
    });

    document.querySelectorAll('#edit-property-form .prev-step').forEach(btn => {
      btn.addEventListener('click', () => {
        currentStep = Math.max(currentStep - 1, 1);
        showStep(currentStep);
      });
    });

    showStep(currentStep);

    const postalCodePattern = /^\d{5}$/;
    form?.addEventListener('submit', (event) => {
      const postalCodeInput = document.getElementById('postalCode');
      if (postalCodeInput && !postalCodePattern.test(postalCodeInput.value || '')) {
        event.preventDefault();
        alert('Le code postal doit contenir exactement 5 chiffres.');
      }
    });

    const descriptionInput = document.getElementById('description');
    const charCount = document.getElementById('charCount');
    if (descriptionInput && charCount) {
      const updateCharCount = () => {
        charCount.textContent = `${descriptionInput.value.length}/820 caract√®res`;
      };
      updateCharCount();
      descriptionInput.addEventListener('input', updateCharCount);
    }

    window.handleFileUpload = function (input, progressId, statusId) {
      const file = input?.files?.[0];
      const progressBarEl = document.getElementById(progressId);
      const statusEl = document.getElementById(statusId);

      if (!file || !progressBarEl || !statusEl) return;

      progressBarEl.value = 0;
      progressBarEl.style.display = 'block';
      statusEl.style.display = 'block';
      statusEl.textContent = 'Chargement en cours...';

      let progress = 0;
      const interval = setInterval(() => {
        progress = Math.min(progress + 10, 100);
        progressBarEl.value = progress;

        if (progress >= 100) {
          clearInterval(interval);
          statusEl.textContent = '‚úÖ Image charg√©e avec succ√®s !';
          setTimeout(() => {
            progressBarEl.style.display = 'none';
            statusEl.style.display = 'none';
          }, 2000);
        }
      }, 200);
    };

    const extraPhotoIds = Array.from({ length: 8 }, (_, i) => i + 1);
    const extraPhotoElements = extraPhotoIds.map(i => {
      const input = document.getElementById(`extraPhoto${i}`);
      const preview = document.getElementById(`extraPreview${i}`);
      if (input) {
        input.addEventListener('change', function () {
          const file = this.files?.[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = e => {
              if (preview) {
                preview.src = e.target.result;
                preview.classList.remove('d-none');
              }
            };
            reader.readAsDataURL(file);
          } else if (preview) {
            preview.src = '';
            preview.classList.add('d-none');
          }
        });
      }
      return { input, preview };
    });

    const miniPhotosInput = document.getElementById('miniPhotos');
    const miniPreview = document.getElementById('miniPhotosPreview');
    miniPhotosInput?.addEventListener('change', function () {
      if (!miniPreview) return;
      miniPreview.innerHTML = '';
      if (this.files.length > 3) {
        alert('Vous pouvez t√©l√©charger jusqu\'√† 3 photos.');
        this.value = '';
        return;
      }
      Array.from(this.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = e => {
          const img = document.createElement('img');
          img.src = e.target.result;
          img.classList.add('border', 'rounded');
          img.style.height = '60px';
          img.style.objectFit = 'cover';
          miniPreview.appendChild(img);
        };
        reader.readAsDataURL(file);
      });
    });

    const videoInput = document.getElementById('videoUrl');
    const mainPhotoInputs = [document.getElementById('photo1'), document.getElementById('photo2')];
    const mediaNotice = document.getElementById('mediaNotice');

    function clearFileInput(input) {
      if (!input) return;
      input.value = '';
      input.dispatchEvent(new Event('change'));
    }

    function toggleMediaFields(hasVideo) {
      mainPhotoInputs.forEach(input => {
        if (!input) return;
        input.disabled = hasVideo;
        input.required = !hasVideo && requireNewMainPhotos;
        if (hasVideo) {
          clearFileInput(input);
        }
      });

      extraPhotoElements.forEach(({ input, preview }) => {
        if (!input) return;
        input.disabled = hasVideo;
        if (hasVideo) {
          input.value = '';
          if (preview) {
            preview.src = '';
            preview.classList.add('d-none');
          }
        }
      });

      if (miniPhotosInput) {
        miniPhotosInput.disabled = hasVideo;
        if (hasVideo) {
          miniPhotosInput.value = '';
          if (miniPreview) {
            miniPreview.innerHTML = '';
          }
        }
      }

      if (mediaNotice) {
        if (hasVideo) {
          mediaNotice.textContent = 'Les photos sont d√©sactiv√©es car un lien vid√©o plein √©cran est renseign√©.';
          mediaNotice.classList.remove('text-muted');
          mediaNotice.classList.add('text-danger');
        } else {
          mediaNotice.textContent = 'Ajoutez vos photos ou indiquez un lien vid√©o plein √©cran.';
          mediaNotice.classList.remove('text-danger');
          mediaNotice.classList.add('text-muted');
        }
      }
    }

    if (videoInput) {
      videoInput.addEventListener('input', () => {
        const hasVideo = videoInput.value.trim().length > 0;
        toggleMediaFields(hasVideo);
      });
      toggleMediaFields(initialHasVideo);
    }
  });
</script>
